#!/bin/sh
# Copies appropriate portions of the source tree
# to a "DOS" source tree; This tree is suitable
# for futher processing to produce a working build
# directory on a DOS-style system (DOS, Windows, OS/2)
# or for directly use/linking where appropriate (e.g., OS/2),
# as we do in the Unix setting. Just those directories
# necessary for DOS are copied (no non-i386 native code,
# no generate, etc.)  All text files are coverted to
# DOS-end-of-line format.
#
# Expects to wake up in the top-level of alsp_src,
# or an exported (cvs) directory;
#
# Expects $1 to be a path to the target directory.
#
# Copies the appropriate directories from the
# current dir to the target dir (using cp -r),
# and then applies u2d to *.c *.h and other files
#
# Usage: xprt2dos <target dir>

echo Target dir = $1
mkdir $1
echo Copying:
echo - top level directory...
cp readme $1
u2d $1/readme
cp cfgs/dos/readme.dos $1
u2d $1/readme.dos

echo - cfgs
mkdir $1/cfgs
cp ./cfgs/* $1/cfgs
u2d $1/cfgs/*
cp ./cfgs/dos/doconfig.bat $1

echo - bld-port
cp -r ./bld-port $1
u2d $1/bld-port/*

echo - bld-natv
cp -r ./bld-natv $1
u2d $1/bld-natv/*

echo - builtins
cp -r ./builtins $1
u2d $1/builtins/*.pro

echo - library
cp -r ./library $1
u2d $1/library/*.pro

#echo - cinterf
#cp -r ./cinterf $1
#u2d $1/cinterf/readme
#u2d $1/cinterf/c2pro/*
#u2d $1/cinterf/pro2intf/*
#u2d $1/cinterf/deps/*

echo - generic
cp -r ./generic $1
u2d $1/generic/*.c
u2d $1/generic/*.h
u2d $1/generic/*.tags
u2d $1/generic/*.mkf
u2d $1/generic/*.txt
u2d $1/generic/generate/*
u2d $1/generic/generate/tok.h/*

mv $1/generic/generate/tok.h/* $1/generic

echo - i386
cp -r ./i386 $1
rm -r $1/i386/OLD
rm -r $1/i386/sysv
rm -r $1/i386/dosphar
rm -r $1/i386/*.m4
rm -r $1/i386/*.c
rm -r $1/i386/generate
u2d $1/i386/*
u2d $1/i386/*/*

echo - pconfig
cp -r ./pconfig $1
u2d $1/pconfig/*.pro
u2d $1/pconfig/*.in

echo - port
cp -r ./port $1
u2d $1/port/*.c
u2d $1/port/*.h
u2d $1/port/*.mkf
u2d $1/port/*/*.h

echo - tests
cp -r ./tests $1
u2d $1/tests/*.pro
u2d $1/tests/als_exmp/*.pro
u2d $1/tests/systests/*.pro
u2d $1/tests/tsuite/*.pro

echo - utils
cp -r ./utils $1
u2d $1/utils/*

echo - wins
cp -r ./wins $1
u2d $1/wins/build/*.in
u2d $1/wins/build/x/*
u2d $1/wins/build/motif/*
u2d $1/wins/build/mswins/*
u2d $1/wins/src/*

echo Removing any copied CVS directories...
rm -r $1/CVS
rm -r $1/*/CVS
rm -r $1/*/*/CVS
rm -r $1/port/HIDE
rm -r $1/wins/build/*/CVS

#echo Setting up DJGPP makefile templates...
#cp cfgs/maketop.dj $1/makefile.in
#cp bld-port/makefile.dj $1/bld-port/makefile.in
#cp bld-natv/makefile.dj $1/bld-natv/makefile.in
#cp generic/generate/generic.dj $1/generic/generic.mkf
#cp port/port.dj $1/port/port.mkf
# Later: something for i386 dir


