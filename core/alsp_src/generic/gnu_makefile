BUNDLE ?= bundle

docs :
	cd $(CORE)/../docs && $(BUNDLE) install && $(BUNDLE) exec jekyll build
	env BUNDLE=$(BUNDLE) $(CORE)/../docs/_build_local_docs.sh

testdocs : docs
	cd $(CORE)/../docs && $(BUNDLE) exec htmlproofer \
	--internal-domains "alsprolog.com" \
	--check-html --check-img-http --enforce-https --check-opengraph --check-sri \
	--empty-alt-ignore _site
	cd $(CORE)/../docs/_local_site && $(BUNDLE) exec htmlproofer \
	--directory-index-file noindex.html \
	--check-html --disable-external --empty-alt-ignore

clean :
	rm -f *.o rm *.d

distclean: superclean

superclean : clean
	rm -fr alsdir alspro* alspro_b* alsdev* studals* libalspro.a libalspro.$(OS_SL_EXT)* *.obp $(SUBOS)
	rm -rf $(SOURCE_DIR)/tests/iso_test_suite/*.tmp $(SOURCE_DIR)/tests/iso_test_suite/*.out *.log *.out foo* *.tmp

-include *.d

