# Generic Unix makefile for ALS Prolog Tcl Plugin
# To use, the following symbols must be defined:
#    LINK - linker directives to create shared library

ALSP_SOURCE = /apache/alsp_src/generic

CC = gcc

VPATH = ../common:$(ALSP_SOURCE)

CPPFLAGS = -I ../common -I $(ALSP_SOURCE) -I /usr/include/X11R5 -DUNIX -DUNIX_NAME='"$(UNIX_NAME)"'

CFLAGS = -Wall -MD -fPIC

source = alspi_slib.c new_alspi.c tcl_interface.c

objects = $(source:.c=.o)

all: tclintf.psl test

tclintf.psl: $(objects)
	$(CC) $(LINK) -L/usr/local/lib $(objects) \
		-ltcl8.0 -ltk8.0 -lX11 -lm -lc -o tclintf.psl
	chmod a-x tclintf.psl
	
$(objects) : makefile unix_makefile

test : unix_makefile tclintf.psl
	alspro -gic -q -b ../common/tcltk.pro ./tclintf.psl ../common/tcl_test.pro \
	-s . -g "test('../common/prolog_test.tcl')"

-include *.d

clean :
	rm -f $(objects) *.d *.obp

superclean: clean
	rm -f tclintf.psl

